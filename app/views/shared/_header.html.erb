<header class='top-page-header'>
  <div class= 'top-bar-contents'>
    <div class="left-top">
     <div class= 'title'>Kitto 勝男</div>
     <%= link_to image_tag "katsuo.png" , class: "katsuo" %>
    </div>

    <div class="right-top">
      <%= search_form_for @p, url:  search_tickets_path do |f| %>
      <% f.label :category_id_name_eq, '商品を検索する' %>
       <%= f.collection_select(:category_id_eq , Category.all , :id, :name ,{prompt: "カテゴリ名"}, {class: "select-box"}) %>
       <%= f.submit '検索' , class: "submit-btn" %>
      <%end%>
    </div>

 </div>


  <div class='nav'>
    <ul class='lists-left'>
      <% if user_signed_in? %>
       <div class='user_nav grid-6'> 
        <%= link_to 'トップページに戻る' , root_path ,class:"item-list" %>
        <%= link_to '出品する' , new_ticket_path , class: "item-new" , method: :get %>
        <%= link_to 'メッセージを確認' , '#' ,  class: 'item-message' %>
       </div>
      <%else%>
       <div class="grid-6">
        <%= link_to 'トップページに戻る' , root_path , class: "item-list" %>
       </div>
      <%end%>
    </ul>

   <ul class='lists-right'>
     <% if user_signed_in? %>
      <div class="user_nav grid-6">
          <%= link_to {current_user.nickname} %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete , class:"logout"%>
       </div> 
     <% else %>
       <div class="grid-6">
          <%= link_to 'ログインする', new_user_session_path, class:"login" %>
          <%= link_to '新規登録', new_user_registration_path, class:"sign-up" %>
        </div>
     <% end %>
   </ul> 
  </div>
</header>

