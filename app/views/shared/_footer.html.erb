<footer class='footer'>
 <div class= 'footer-contents'>

   <div class = 'footer-left'>
    <ul>Fish man's<br><br>company</ul>  
    <%= link_to image_tag "fish.png" , class: "fish" %>
   </div> 
    
   <div class = 'footer-center'> 
     <%= link_to 'トップに戻る' , root_path ,class: "footer-list1" %>
    <%= link_to  '検索する'    ,  search_tickets_path ,class:"footer-list2" %>
   </div>


   <div class= 'footer-right'>
    <% if user_signed_in? %>
       <div class="user_nav_grid-6">
         <%= link_to '会員情報変更', edit_user_path(current_user), class: "info-change" %>
         <%= link_to '退会する', user_path(current_user), class: "withdrawal" , method: :delete%>
       </div>
    <% else %>
       <div class="grid-7">
         <%= link_to 'ログイン', new_user_session_path, class: "footer-login" %>
         <%= link_to '新規登録', new_user_registration_path, class: "footer-sign-up" %>
       </div>
    <% end %>  
  </div>

</footer>
